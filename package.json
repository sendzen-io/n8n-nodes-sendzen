{
	"name": "n8n-nodes-sendzen",
	"version": "1.0.8",
	"description": "Send and receive WhatsApp Cloud API messages in n8n using SendZen (actions + webhook trigger).",
	"license": "MIT",
	"keywords": [
		"n8n-community-node-package",
		"sendzen",
		"automation",
		"whatsapp",
		"whatsapp business",
		"whatsapp cloud api",
		"sms",
		"messaging",
		"marketing",
		"chat",
		"trigger"
	],
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/sendzen-io/n8n-nodes-sendzen#readme",
	"bugs": {
		"url": "https://github.com/sendzen-io/n8n-nodes-sendzen/issues",
		"email": "milan@sendzen.io"
	},
	"author": {
		"name": "SendZen",
		"email": "milan@sendzen.io"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sendzen-io/n8n-nodes-sendzen.git"
	},
	"scripts": {
		"build": "n8n-node build",
		"build:watch": "tsc --watch",
		"dev": "n8n-node dev",
		"lint": "n8n-node lint",
		"lint:fix": "n8n-node lint --fix",
		"release": "n8n-node release",
		"prepublishOnly": "n8n-node prerelease",
		"test": "jest"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/SendZenApi.credentials.js",
			"dist/credentials/SendZenWebhookApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/SendZen/SendZen.node.js",
			"dist/nodes/SendZen/SendZenTrigger.node.js"
		]
	},
	"devDependencies": {
		"@n8n/node-cli": "*",
		"@types/node": "^25.0.3",
		"eslint": "9.32.0",
		"prettier": "3.6.2",
		"release-it": "^19.0.4",
		"typescript": "5.9.2",
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
